	urldate = {2021-01-04},
	journal = {Physical Review D},
	author = {Winther, Hans and Casas, Santiago and Baldi, Marco and Koyama, Kazuya and Li, Baojiu and Lombriser, Lucas and Zhao, Gong-Bo},
