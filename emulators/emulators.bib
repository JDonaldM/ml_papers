	author = {Euclid Collaboration and Knabenhans, Mischa and Stadel, Joachim and Marelli, Stefano and Potter, Doug and Teyssier, Romain and Legrand, Laurent and Schneider, Aurel and Sudret, Bruno and Blot, Linda and Awan, Saeeda and Burigana, Carlo and Carvalho, Carla Sofia and Kurki-Suonio, Hannu and Sirri, Gabriele},
