	volume = {874},
	issn = {1538-4357},
	shorttitle = {The {Aemulus} {Project} {III}},
	url = {http://arxiv.org/abs/1804.05867},
	doi = {10.3847/1538-4357/ab0d7b},
	abstract = {Using the N-body simulations of the AEMULUS Project, we construct an emulator for the non-linear clustering of galaxies in real and redshift space. We construct our model of galaxy bias using the halo occupation framework, accounting for possible velocity bias. The model includes 15 parameters, including both cosmological and galaxy bias parameters. We demonstrate that our emulator achieves {\textasciitilde} 1\% precision at the scales of interest, 0.1{\textless}r{\textless}10 h{\textasciicircum}\{-1\} Mpc, and recovers the true cosmology when tested against independent simulations. Our primary parameters of interest are related to the growth rate of structure, f, and its degenerate combination fsigma\_8. Using this emulator, we show that the constraining power on these parameters monotonically increases as smaller scales are included in the analysis, all the way down to 0.1 h{\textasciicircum}\{-1\} Mpc. For a BOSS-like survey, the constraints on fsigma\_8 from r{\textless}30 h{\textasciicircum}\{-1\} Mpc scales alone are more than a factor of two tighter than those from the fiducial BOSS analysis of redshift-space clustering using perturbation theory at larger scales. The combination of real- and redshift-space clustering allows us to break the degeneracy between f and sigma\_8, yielding a 9\% constraint on f alone for a BOSS-like analysis. The current AEMULUS simulations limit this model to surveys of massive galaxies. Future simulations will allow this framework to be extended to all galaxy target types, including emission-line galaxies.},
	number = {1},
	urldate = {2019-08-15},
	journal = {The Astrophysical Journal},
	author = {Zhai, Zhongxu and Tinker, Jeremy L. and Becker, Matthew R. and DeRose, Joseph and Mao, Yao-Yuan and McClintock, Thomas and McLaughlin, Sean and Rozo, Eduardo and Wechsler, Risa H.},
	month = mar,
	year = {2019},
	note = {arXiv: 1804.05867},
	keywords = {Astrophysics - Cosmology and Nongalactic Astrophysics, Astrophysics - Astrophysics of Galaxies, Astrophysics - Instrumentation and Methods for Astrophysics},
	pages = {95},
	annote = {Comment: 14 pages, 8 figures, 1 table; submitted to ApJ; the project webpage is available at https://aemulusproject.github.io ; typo in Figure 7 and caption updated, results unchanged}
}

