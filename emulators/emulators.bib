@misc{nygaard_connect_2022,
	title = {{CONNECT}: {A} neural network based framework for emulating cosmological observables and cosmological parameter inference},
	shorttitle = {{CONNECT}},
	url = {http://arxiv.org/abs/2205.15726},
	abstract = {Bayesian parameter inference is an essential tool in modern cosmology, and typically requires the calculation of \$10{\textasciicircum}5\$--\$10{\textasciicircum}6\$ theoretical models for each inference of model parameters for a given dataset combination. Computing these models by solving the linearised Einstein-Boltzmann system usually takes tens of CPU core-seconds per model, making the entire process very computationally expensive. In this paper we present {\textbackslash}textsc\{connect\}, a neural network framework emulating {\textbackslash}textsc\{class\} computations as an easy-to-use plug-in for the popular sampler {\textbackslash}textsc\{MontePython\}. {\textbackslash}textsc\{connect\} uses an iteratively trained neural network which emulates the observables usually computed by {\textbackslash}textsc\{class\}. The training data is generated using {\textbackslash}textsc\{class\}, but using a novel algorithm for generating favourable points in parameter space for training data, the required number of {\textbackslash}textsc\{class\}-evaluations can be reduced by two orders of magnitude compared to a traditional inference run. Once {\textbackslash}textsc\{connect\} has been trained for a given model, no additional training is required for different dataset combinations, making {\textbackslash}textsc\{connect\} many orders of magnitude faster than {\textbackslash}textsc\{class\} (and making the inference process entirely dominated by the speed of the likelihood calculation). For the models investigated in this paper we find that cosmological parameter inference run with {\textbackslash}textsc\{connect\} produces posteriors which differ from the posteriors derived using {\textbackslash}textsc\{class\} by typically less than \$0.01\$--\$0.1\$ standard deviations for all parameters. We also stress that the training data can be produced in parallel, making efficient use of all available compute resources. The {\textbackslash}textsc\{connect\} code is publicly available for download at {\textbackslash}url\{https://github.com/AarhusCosmology\}.},
	urldate = {2022-06-06},
	publisher = {arXiv},
	author = {Nygaard, Andreas and Holm, Emil Brinch and Hannestad, Steen and Tram, Thomas},
	month = may,
	year = {2022},
	note = {Number: arXiv:2205.15726
arXiv:2205.15726 [astro-ph, physics:hep-th]},
	keywords = {Astrophysics - Cosmology and Nongalactic Astrophysics, Astrophysics - Instrumentation and Methods for Astrophysics, High Energy Physics - Theory},
