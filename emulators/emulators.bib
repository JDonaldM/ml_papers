	journal = {arXiv:2011.15018 [astro-ph]},
	author = {Aricò, Giovanni and Angulo, Raul E. and Contreras, Sergio and Ondaro-Mallea, Lurdes and Pellejero-Ibañez, Marcos and Zennaro, Matteo},
	month = nov,
	year = {2020},
	note = {arXiv: 2011.15018},
	keywords = {Astrophysics - Cosmology and Nongalactic Astrophysics, Astrophysics - Astrophysics of Galaxies},
	annote = {Comment: 13 pages, 11 figures. Comments are welcome},
}

@article{alsing_speculator_2020,
