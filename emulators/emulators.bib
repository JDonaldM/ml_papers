@article{miyatake_cosmological_2021,
	title = {Cosmological inference from the emulator based halo model {II}: {Joint} analysis of galaxy-galaxy weak lensing and galaxy clustering from {HSC}-{Y1} and {SDSS}},
	shorttitle = {Cosmological inference from the emulator based halo model {II}},
	url = {http://arxiv.org/abs/2111.02419},
	abstract = {We present high-fidelity cosmology results from a blinded joint analysis of galaxy-galaxy weak lensing (\${\textbackslash}Delta{\textbackslash}!{\textbackslash}Sigma\$) and projected galaxy clustering (\$w\_\{{\textbackslash}rm p\}\$) measured from the Hyper Suprime-Cam Year-1 (HSC-Y1) data and spectroscopic Sloan Digital Sky Survey (SDSS) galaxy catalogs in the redshift range \$0.15{\textless}z{\textless}0.7\$. We define luminosity-limited samples of SDSS galaxies to serve as the tracers of \$w\_\{{\textbackslash}rm p\}\$ in three spectroscopic redshift bins, and as the lens samples for \${\textbackslash}Delta{\textbackslash}!{\textbackslash}Sigma\$. For the \${\textbackslash}Delta{\textbackslash}!{\textbackslash}Sigma\$ measurements, we select a single sample of 4 million source galaxies over 140 deg\${\textasciicircum}2\$ from HSC-Y1 with photometric redshifts (photo-\$z\$) greater than 0.75, enabling a better handle of photo-\$z\$ errors by comparing the \${\textbackslash}Delta{\textbackslash}!{\textbackslash}Sigma\$ amplitudes for the three lens redshift bins. For cosmological parameter inference, we use an input galaxy-halo connection model built on the \{{\textbackslash}tt Dark Emulator\} package with a halo occupation distribution that includes nuisance parameters to marginalize over modeling uncertainties. We model the \${\textbackslash}Delta{\textbackslash}!{\textbackslash}Sigma\$ and \$w\_\{{\textbackslash}rm p\}\$ measurements on scales from \$R{\textbackslash}simeq 3\$ and \$2{\textbackslash},h{\textasciicircum}\{-1\}\{{\textbackslash}rm Mpc\}\$, respectively, up to \$30{\textbackslash},h{\textasciicircum}\{-1\}\{{\textbackslash}rm Mpc\}\$ assuming a flat \${\textbackslash}Lambda\$CDM cosmology. With various tests using mock catalogs described in Miyatake et al. (2021), we show that any bias in the clustering amplitude \$S\_8{\textbackslash}equiv {\textbackslash}sigma\_8({\textbackslash}Omega\_\{{\textbackslash}rm m\}/0.3){\textasciicircum}\{0.5\}\$ due to uncertainties in the galaxy-halo connection is less than \${\textbackslash}sim50\${\textbackslash}\% of the statistical uncertainty of \$S\_8\$, \{{\textbackslash}it unless\} the assembly bias effect is unexpectedly large. Our best-fit models have \$S\_8=0.795{\textasciicircum}\{+0.049\}\_\{-0.042\}\$ (mode and 68{\textbackslash}\% credible interval) for the flat \${\textbackslash}Lambda\$CDM model; we find tighter constraints on the quantity \$S\_8({\textbackslash}alpha=0.17){\textbackslash}equiv{\textbackslash}sigma\_8({\textbackslash}Omega\_\{{\textbackslash}rm m\}/0.3){\textasciicircum}\{0.17\} =0.745{\textasciicircum}\{+0.039\}\_\{-0.031\}\$. (abriged)},
	urldate = {2021-11-05},
